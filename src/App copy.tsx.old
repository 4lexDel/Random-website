import React, { useState, useEffect } from 'react';

function App() {
  // State to manage dark mode
  const [darkMode, setDarkMode] = useState(false);

  // Check local storage for saved theme on component mount
  useEffect(() => {
    const savedTheme = localStorage.getItem('darkMode');
    if (savedTheme === 'true') {
      setDarkMode(true);
      document.documentElement.classList.add('dark');
    }
  }, []);

  // Function to toggle dark mode
  const toggleDarkMode = () => {
    setDarkMode(!darkMode);
    if (!darkMode) {
      document.documentElement.classList.add('dark');
      localStorage.setItem('darkMode', 'true');
    } else {
      document.documentElement.classList.remove('dark');
      localStorage.setItem('darkMode', 'false');
    }
  };

  return (
    <div className="bg-background text-text font-body">
      {/* Dark Mode Toggle Button */}
      <header className="w-full py-6 bg-primary text-background flex justify-between items-center">
        <nav className="container mx-auto flex justify-between items-center">
          <h1 className="text-3xl font-bold font-heading">MyWebsite</h1>
          <ul className="flex space-x-6">
            <li><a href="#home" className="text-xl">Home</a></li>
            <li><a href="#about" className="text-xl">About</a></li>
            <li><a href="#services" className="text-xl">Services</a></li>
            <li><a href="#contact" className="text-xl">Contact</a></li>
          </ul>
        </nav>
        {/* Dark Mode Switch */}
        <button
          onClick={toggleDarkMode}
          className="text-xl bg-accent text-background px-4 py-2 rounded ml-4"
        >
          {darkMode ? 'Light Mode' : 'Dark Mode'}
        </button>
      </header>

      {/* Hero Section */}
      <section id="home" className="container mx-auto py-20 text-center">
        <h2 className="text-5xl font-bold font-heading text-primary mb-6">
          Welcome to MyWebsite
        </h2>
        <p className="text-2xl text-secondary mb-8">
          Your one-stop solution for all your web development needs.
        </p>
        <button className="bg-accent text-background font-bold py-3 px-8 rounded">
          Get Started
        </button>
      </section>

      {/* About Section */}
      <section id="about" className="bg-secondary text-background py-20">
        <div className="container mx-auto text-center">
          <h3 className="text-4xl font-bold mb-6">About Us</h3>
          <p className="text-xl mb-8">
            We are a creative team passionate about building quality websites.
          </p>
          <button className="bg-accent text-background font-bold py-3 px-8 rounded">
            Learn More
          </button>
        </div>
      </section>

      {/* Services Section */}
      <section id="services" className="container mx-auto py-20 text-center">
        <h3 className="text-4xl font-bold text-primary mb-6">Our Services</h3>
        <div className="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div className="bg-background shadow-lg p-6 rounded">
            <h4 className="text-2xl font-bold text-accent mb-4">Web Development</h4>
            <p className="text-base">
              We build modern, responsive websites to help you reach your customers.
            </p>
          </div>
          <div className="bg-background shadow-lg p-6 rounded">
            <h4 className="text-2xl font-bold text-accent mb-4">UI/UX Design</h4>
            <p className="text-base">
              Our designs focus on creating user-friendly and aesthetic experiences.
            </p>
          </div>
          <div className="bg-background shadow-lg p-6 rounded">
            <h4 className="text-2xl font-bold text-accent mb-4">SEO Services</h4>
            <p className="text-base">
              We optimize your website to rank higher on search engines.
            </p>
          </div>
        </div>
      </section>

      {/* Footer */}
      <footer className="bg-primary text-background py-6">
        <div className="container mx-auto text-center">
          <p className="text-xl">
            &copy; {new Date().getFullYear()} MyWebsite. All rights reserved.
          </p>
        </div>
      </footer>
    </div>
  );
}

export default App;
