@tailwind base;
@tailwind components;
@tailwind utilities;

* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

@layer base {
  :root {
    --text: #0a0605;
    --background: #fcfaf8;
    --primary: #c9644a;
    --secondary: #e89a87;
    --accent: #ee7253;
    --info: #a021ca;
  }
  .dark {
    --text: #faf6f5;
    --background: #070503;
    --primary: #b54f36;
    --secondary: #782a17;
    --accent: #ac3011;
    --info: #7c179e;
  }
}

